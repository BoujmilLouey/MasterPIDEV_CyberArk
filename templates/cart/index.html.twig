{% extends 'base.html.twig' %}
{% block body %}
    {% block content %}
        <section class="bg-light p-3 mt-5">
            <h1>Votre panier</h1>
        </section>
        <table class="table">
            <thead  style="background-color:#fff;">
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for element in dataPanier %}
                <tr>
                    <td>{{ element.produit.title }}</td>
                    <td class="text-end">{{ element.produit.price }} DT </td>
                    <td>{{ element.quantite }}</td>
                    <td class="text-end">{{ element.quantite * element.produit.price }} DT </td>
                    <td>
                        <a href="{{path("cart_add", {id: element.produit.id})}}"  class="btn btn-secondary mb-2"> +
                            <i class="bi bi-cart-plus"></i>
                        </a>
                        <a href="{{path("cart_remove", {id: element.produit.id})}}" class="btn btn-secondary mb-2"> -
                            <i class="bi bi-cart-dash"></i>
                        </a>
                        <a href="{{path("cart_delete", {id: element.produit.id})}}" class="btn btn-secondary mb-2"> effacer produit
                            <i class="bi bi-cart-x"></i>
                        </a>
                    </td>
                </tr>

            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Votre panier est vide</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3">Total</td>
                <td class="text-end">{{ total }} DT </td>
                <td>
                    <a href="{{path("cart_delete_all")}}" class="btn btn-secondary mb-2"> vider panier
                        <i class="bi bi-cart-x"></i>
                    </a>
                </td>
            </tr>
            <tr>
                <a href="{{path("commmande")}}" class="btn btn-secondary mb-2">Valider
                    <i class="bi bi-cart-x"></i>
                </a>
            </tr>
            </tfoot>

        </table>
    {% endblock %}
{% endblock %}

